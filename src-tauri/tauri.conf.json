{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "POS System",
  "version": "0.1.0",
  "identifier": "com.pos-system.app",
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "POS System",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "Business",
    "shortDescription": "Point of Sale System",
    "longDescription": "A simple Point of Sale system for retail stores"
  }
}